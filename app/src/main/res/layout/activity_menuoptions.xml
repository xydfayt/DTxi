<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/lin_lay"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@drawable/main_background">


    <TextView
        android:id="@+id/titletext1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/orange"
        android:textSize="@dimen/xxlarge"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:text="Welcome" />
    <TextView
        android:id="@+id/titletext2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/xxlarge"
        android:textAlignment="center"
        android:layout_marginBottom="10dp"
        android:text="John Doe" />

    <Button
        android:id="@+id/menu_btn1"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Select Vehicle"
        android:background="@drawable/button_color"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:onClick="goToVehicles"
        android:textSize="@dimen/medium" />
    <Button
        android:id="@+id/menu_btn2"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Go to Map"
        android:background="@drawable/button_color"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:textSize="@dimen/medium" />
    <Button
        android:id="@+id/menu_btn3"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Update Personal Info"
        android:background="@drawable/button_color"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:textSize="@dimen/medium" />
    <Button
        android:id="@+id/menu_btn4"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Settings"
        android:background="@drawable/button_color"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:textSize="@dimen/medium" />
    <Button
        android:id="@+id/menu_btn5"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Log Out"
        android:background="@drawable/button_color"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:onClick="Logout"
        android:textSize="@dimen/medium" />


</LinearLayout>